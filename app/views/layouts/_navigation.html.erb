<ul class="nav">
  <li>
    <%= link_to "PostIt!", root_path, :class => 'brand' %>
  </li>
  <li>
    <%= render 'layouts/category_dropdown' %>
  </li>
  <% if logged_in? %>
    <li>
      <div class='nav_item'>
        <%= link_to 'New Post', new_post_path, class: 'btn btn-success btn-small' %>
      </div>
    </li>
    <li>
      <div class='btn-group nav_item'>
        <%= link_to '', class: 'btn btn-small btn-toggle', 'data-toggle' => 'dropdown' do %>
          <%= current_user.username %>
          <span class='caret'></span>
        <% end %>
        <ul class='dropdown-menu'>
          <li>
            <%= link_to edit_user_path(current_user) do %>
              <i class='icon-pencil'></i>
              edit profile
            <% end %>
          </li>
          <li>
            <%= link_to user_path(current_user) do %>
              <i class='icon-user'></i>
              view profile
            <% end %>
          </li>
          <li>
            <%= link_to logout_path do %>
              <i class='icon-circle-arrow-left'></i>
              logout
            <% end %>
          </li>
        </ul>
      </div>
    </li>
  <% else # logged out %>
    <li>
      <div class='nav_item'>
        <%= link_to 'Register', register_path, class: 'btn btn-success btn-small' %>
      </div>
    </li>
    <li>
      <div class='nav_item'>
        <%= link_to 'Login', login_path, class: 'btn btn-success btn-small' %>
      </div>
    </li>
  <% end %>
</ul>

