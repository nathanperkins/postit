<div class='row'>
  <div class='span8 well'>
    <p><%= render post.categories %><p>
    <h4><%= link_to post.title, post.url %></h4>
    <p><%= post.description %></p>
    <p>
      <span class='quiet'>posted by</span> <%= link_to post.creator.username, user_path(post.creator) %> <small>at <%= post.created_at %></small>
    </p>
    <small><span><%= link_to "#{post.comments.size} Comments", post_path(post) %></span></small>
  </div>
</div>