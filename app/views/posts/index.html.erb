<p class='lead'>
  All posts!
  <hr>
</p>

<ul>
  <% @posts.each do |post| %>
    <div class='well'>
      <span class='label label-default'><%= post.categories.first.name %></span>
      <h3><%= link_to post.title, post.url %></h3>
      <p><%= link_to 'Comments', post_path(post) %></p>
      <p>Posted by <%= link_to post.creator.username, user_path(post.creator) %> at <%= post.created_at %>.</p>
    </div>
  <% end %>
</ul>

<hr>

<%= link_to 'New Post', new_post_path %>