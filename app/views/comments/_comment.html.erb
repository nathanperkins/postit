<% show_post ||= false %>

<div class='span0 well text-center'>
  <%= link_to vote_post_comment_path(comment, vote: true), method: :post, id: comment.id do %>
    <i class='icon-arrow-up'></i>
  <% end %>
  <br/>
  <%= post.total_votes %> Votes
  <br/>
  <%= link_to vote_post_comment_path(comment, vote: false), method: :post, id: comment.id do %>
    <i class='icon-arrow-down'></i>
  <% end %>
</div>

<div class='row'>
  <div class='span8 well'>
    <em><p>"<%= comment.body %>"</em> 
    <% if show_post %>
      on <%= link_to comment.post.title, post_path(comment.post) %>
      <% end %>
    </p>
    <span class='quiet'>by </span><%= link_to comment.creator.username, user_path(comment.creator) %> <small>at <%= display_datetime(comment.created_at) %></small>
  </div>
</div>