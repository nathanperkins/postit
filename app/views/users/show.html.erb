<% header = link_to('All Posts', posts_path) + (" &raquo; " + link_to('Users', users_path) + " &raquo; #{@user.username}").html_safe %>

<%= render 'shared/content_title', title: header %>
<div class='well'>
  <ul>
    <li><strong>Username: </strong><%= @user.username %></li>
    <li><strong>Time zone: </strong><%= "Time zone goes here" %></li>
  </ul>
</div>
<hr>
<h4><%= @user.username %>'s activity</h4>
<ul class="nav nav-pills">
  <li role="presentation" class="active"><a href="#">Posts</a></li>
  <li role="presentation"><a href="#">Comments</a></li>
</ul>

<%= render @user.posts %>
<%= render @user.comments %>

<%= link_to "back to users", users_path %>